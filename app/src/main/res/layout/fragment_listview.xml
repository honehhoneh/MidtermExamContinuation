<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Fragment.ListViewFragment"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal">


        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarLoadingBooks"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/progress_getting_books"
            android:id="@+id/tvProgressGettingBooks"
            android:layout_below="@+id/progressBarLoadingBooks"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_gravity="center" />

        <ListView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainListView"/>
    </LinearLayout>

